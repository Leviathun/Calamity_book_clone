      src="https://kit.fontawesome.com/451145afdd.js"
      crossorigin="anonymous"
    ></script>
    
    <link rel="stylesheet" href="css/Home.css" />
    <link rel="stylesheet" href="css/Staff-login.css" />
</head>
<body>
    <%- include('../templates/nav-bar-user') %>
    <div id="container">
        <h1 class="h1-text">Welcome Admin</h1>
        <div id="form">
            <div class="button">
                <button type="button" id="LogInButton">Log in</button>
            </div>
            <br>

            <label for="adminID">Admin ID</label><br>
            <input type="textt" name="adminID" id="inputAdminID" placeholder="Enter Your Admin ID">
            <br>

            <label for="adminName">Admin Name</label><br>
            <input type="textt" name="adminName" id="inputAdminName" placeholder="Enter Your Admin Name"> 
            <br>

            <label for="password">Password</label><br>
            <input type="password" name="password" id="inputPassword" placeholder="Enter Your Password">
            <br>

            <div id="submitButton">
                <a href="/staff-product"><input type="submit" value="Login"></a>
            </div>
            
            <div class="or">
                <hr>
                <P>or</P>
                <hr>
            </div>
            
            <div class="LogoLink">
                <a href="https://www.google.co.uk/" target="_blank"><img src="imgAssets/googleLogo.svg" alt="google" class="LogoLink"></a>
                <a href="https://www.facebook.com/" target="_blank"><img src="imgAssets/facebookLogo.svg" alt="facebook" class="LogoLink"></a>
            </div>
    
        </div>
    </div>

    <footer>
        <div style="text-align: center;">
            <a href="/home">&#60;Back to shopping</a>
        </div>
    </footer>
    <script src="js/home.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
