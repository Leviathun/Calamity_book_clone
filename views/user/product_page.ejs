<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/451145afdd.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="css/Home.css">
    <link rel="stylesheet" href="css/Product-page.css">
</head>
<body>

<%- include('../templates/nav-bar-user') %>

<div class="containers wraper" style="margin-top: 50px; margin-bottom: 50px;">
    <div class="row top-contact">
        <div class="col-sm-6 col-lg-6 center">        
            <!-- Displaying only one product image -->
            <div class="products-item">
                <div class="products-img position-relative">
                    <a href="/product-page"> <!-- Anchor tag for navigation -->
                        <img src="<%= products[0].img_link %>" alt="<%= products[0].product_name %>">
                    </a>
                    <p class="product-label position-absolute">
                        <span class="line-1"><%= products[0].percent %></span> 
                        <br>
                        <span class="line-2">OFF</span> 
                    </p>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-lg-6 ">
            <!-- Product details -->
            <div class="Product-info">
                <h4 id="product-title"><%= products[0].product_name %></h4>
                <h4 id="product-item">ID: <%= products[0].product_ID %></h4>
                <p><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i><i class="fa-regular fa-star"></i></p>
                <div class="products-price">
                    <div class="discount">
                        <p><i class="fa-solid fa-baht-sign"></i><%= products[0].price_discount %></p>
                    </div>
                    <div class="original">
                        <p><span class="line-discount"><i class="fa-solid fa-baht-sign "></i><%= products[0].price %></span></p>
                    </div>
                </div>
                <h4>Availability : <span id="product-availability">yes</span></h4>
            </div>

            <!-- Quantity and add to cart button -->
            <div class="d-flex">
                <div>
                    <div class="dropdown-center"> 
                        <input class="btn btn-secondary" type="number" name="numberQuantity" id="product-quantity" placeholder="Quantity:">                       
                    </div>
                </div>
                <div class="ms-5">
                    <button class="btn btn-secondary" type="submit" id="add-to-cart-btn">Add to cart</button>
                </div>
            </div>
        </div>             
    </div>

    <!-- Description -->
    <div class="flashsale mt-5">
        <div class="d-flex flex-column flex-lg-row center">
            <h2 class="filterflashsale-title">Description</h2>                
        </div> 
    </div>

    <div class="row top-contact">
        <p id="product-description"><%= products[0].description %></p>
    </div>
    
    <!-- Details -->
    <div class="flashsale mt-5">
        <div class="d-flex flex-column flex-lg-row center">
            <h2 class="filterflashsale-title">Details</h2>                
        </div> 
    </div>

    <div class="row top-contact">
        <table>
            <tr>
                <th>Title</th>
                <td id="product-name"><%= products[0].product_name %></td>
            </tr>
            <tr>
                <th>Author</th>
                <td id="product-author"><%= products[0].product_author %></td>
            </tr>
            <tr>
                <th>Publication Date</th>
                <td id="product-publication-date"><%= products[0].public_date %></td>
            </tr>
            <tr>
                <th>Category</th>
                <td id="product-category"><%= products[0].category_type %></td>
            </tr>
        </table>
    </div>
</div>

<%- include('../templates/user-footer') %>

<script src="js/home.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>

</body>
</html>
