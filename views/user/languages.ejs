<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Comics</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <script
    src="https://kit.fontawesome.com/451145afdd.js"
    crossorigin="anonymous"
  ></script>
  <link rel="stylesheet" href="css/Comics.css">
  <link rel="stylesheet" href="css/Home.css" />
</head>
<body>

<%- include('../templates/nav-bar-user') %>

<!--Best seller container start-->
<!-- Best seller start-->
<div class="containers wraper" style="margin-top: 50px; margin-bottom: 50px;">

  <div class="bannerTopic">
    <div class="d-flex flex-column flex-lg-row center">
        <h2 class="filterflashsale-title">
          <i class="fa-solid fa-list"></i>
          All catagory
        </h2>                
      </div>
      
 
  </div>

  
  <div class="row">
    <div class="col-12 col-lg">
      <div class="products-con-common">

        <!--Best seller Product-card start-->
        <% 
        const langProducts = products.filter(product => product.category_type === "Languages");
        if (langProducts.length === 0) { %>
          <p>No new release products available</p>
        <% } else { %>
          <% langProducts.forEach(product => { %>
            <div class="products-item">
              <div class="products-img position-relative">
                <a href="/product-page">
                <img src="<%= product.img_link %>" alt="<%= product.product_name %>">
                </a>
                <p class="product-label position-absolute">
                  <span class="line-1"><%= product.percent %></span> 
                  <br>
                  <span class="line-2">OFF</span> 
                </p>
              </div>
              <div class="products-detail">
                <p><span><%= product.product_name %></span></p>
                <p><%= product.category_type %></p>
              </div>
              <!-- Other product details -->
              <div class="products-price">
                <div class="discount">
                  <p><i class="fa-solid fa-baht-sign"></i><%= product.price_discount %></p>
                </div>
                <div class="original">
                  <p><span class="line-discount"><i class="fa-solid fa-baht-sign "></i><%= product.price %></span></p>
                </div>
              </div>
              <div class="products-buy">
                <div>
                  <button class="addbag-b"><p>add to bag</p></button>
                </div>
              </div>
            </div>
          <% }); %>
        <% } %>
      </div>             
    </div>
  </div>
</div>
<!--Best seller container end-->
     
<!--Pagination start-->
<div>
  <ul class="listPage">
      <li class="active"> < </li>
      <li class="active"> 1st Page </li>
      <li class="active"> > </li>
  </ul>
</div>
<!--Pagination end-->

<%- include('../templates/user-footer') %>

<script src="js/comics.js"></script>
<script src="js/home.js"></script>
<script
  src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
  integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
  crossorigin="anonymous"
></script>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
  integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
  crossorigin="anonymous"
></script>
</body>
</html>
